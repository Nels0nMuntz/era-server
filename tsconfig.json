{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["app/types", "node_modules/@types"]
  },
  "include": ["app/**/*.ts", "server.ts"],
  "exclude": ["node_modules"]
}
